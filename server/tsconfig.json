{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "lib": ["es6", "esnext", "es2015"],
    "strictNullChecks": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "baseUrl": "./src",
    "outDir": "./dist"
  },
  "include": ["./src/**/*.tsx", "src/**/*.ts", "src/**/**/*.gql"],
  "exclude": ["node_modules", ".gitignore", "yarn.lock", "./dist/**/*.js"]
}
