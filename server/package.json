{
  "name": "server",
  "version": "1.0.0",
  "description": "An alumni network application ",
  "main": "gateway.ts",
  "repository": "https://github.com/bouyagas/alumni_network/tree/master/",
  "author": "Mohamed Gassama",
  "license": "MIT",
  "scripts": {
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "start-service-post": "nodemon dist/microservices/post/",
    "start-service-profile": "nodemon dist/microservices/profile",
    "start-service-user": "nodemon dist/microservices/user",
    "watch": "rimraf dist && yarn run build-ts && concurrently 'yarn:watch-ts' 'yarn:start-service-*'",
    "start-gateway": "nodemon --delay 2.5 dist/gateway.js",
    "postinstall": "lerna bootstrap"
  },
  "dependencies": {
    "apollo-server": "^2.9.16",
    "bcrypt": "^3.0.7",
    "config": "^3.2.4",
    "faker": "^4.1.0",
    "graphql": "^14.5.8",
    "gravatar": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "lerna": "^3.20.2",
    "lodash": "^4.17.15",
    "mongoose": "^5.8.7",
    "rimraf": "^3.0.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.0-dev.20200114"
  },
  "devDependencies": {
    "@apollo/federation": "^0.11.3",
    "@apollo/gateway": "^0.11.7",
    "@types/bcrypt": "^3.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/config": "^0.0.36",
    "@types/faker": "^4.1.9",
    "@types/gravatar": "^1.8.0",
    "@types/jsonwebtoken": "^8.3.6",
    "@types/lodash": "^4.14.149",
    "@types/mongoose": "^5.5.41",
    "@types/node-fetch": "^2.5.4",
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "concurrently": "^5.0.2",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.1.0"
  }
}
